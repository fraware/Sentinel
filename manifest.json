{
    "manifest_version": 3,
    "name": "Sentinel",
    "version": "0.2",
    "description": "Curate Social Media feed posts to tailor them to YOUR preferences.",
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/*"],
        "js": ["linkedin.js"]
      }
    ],
    "permissions": ["activeTab", "storage"],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      }
  }
  